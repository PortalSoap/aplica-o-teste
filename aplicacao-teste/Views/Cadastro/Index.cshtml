@model List<aplicacao_teste.Models.UserViewModel>

<h1>Bem-Vindo a Morenosoft</h1>
<br />
<h4>Usuários recentemente adicionados: </h4>

@if (Model.Count == 0)
{
    <p>Nenhum usuário foi adicionado recentemente</p>
}
else
{
    <ul>
        @foreach(var user in Model)
        {
            <li>@user.Name @user.LastName (@user.Email)</li>
        }
    </ul>
}
